<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
    <shape android:shape="rectangle">
        <!-- background -->
        <solid android:drawable="@color/colorPrimaryDark" />
        <!-- border -->
        <stroke android:width="2dp" android:color="@color/white" />

        <!-- corner roundness -->
        <corners android:radius="23dp" />
    </shape>


    </item>
    <item
        android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- background -->
            <solid android:drawable="@color/colorPrimary" />
            <!-- border -->
            <stroke android:width="2dp" android:color="@color/white" />

            <!-- corner roundness -->
            <corners android:radius="23dp" />
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- background -->
            <solid android:color="@color/button_land_bac" />
            <!-- border -->
            <stroke android:width="2dp" android:color="@color/white" />

            <!-- corner roundness -->
            <corners android:radius="23dp" />
        </shape>
    </item>
</selector>